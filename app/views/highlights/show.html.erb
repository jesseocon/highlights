<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h3><%= @highlight.title %></h3>
	</div>
	<div class='col-md-6 col-md-offset-3'>
		<p><%= @highlight.description %></p>
	</div>
	<div class='col-md-6 col-md-offset-3'>
		<% if current_user && allowed?(current_user.id, @user.id) %>
			<%= link_to 'Edit', edit_user_highlight_path(@highlight), class: 'btn btn-primary btn-large' %>		
		<% end %>
		<%= link_to 'See All Highlights', user_highlights_path(@user), class: 'btn btn-success btn-large' %>
	</div>
</div>