
<div class='row'>
	<div class='col-md-12'>
		<h1><%= @user.name.titlecase.possessive %> Highlights</h1>
	</div>
	<div class='col-md-4 col-md-offset-3'>
		
			<% if current_user && allowed?(current_user.id, @user.id) %>
			<h3>Create a new highlight! 
				<%= link_to"<span class='glyphicon glyphicon-plus'></span>".html_safe, new_user_highlight_path(current_user) %>
			</h3>
			<% end %>
		
	</div>
	<div class='col-md-6 col-md-offset-3'>
		<div class='row'>
			<% @highlights.each do |highlight| %>
				<div class='col-md-2'>
					<%= link_to "View", user_highlight_path(@user, highlight), class: 'btn btn-large btn-primary' %>	
				</div>				


				<div class='col-md-4'>
					<h5>Title: <span><%= highlight.title %><span></h5> 
				</div>
				<div class='col-md-6'>
					<h5>Description: <span><%= highlight.description %></span></h5>
				</div>
			<% end %>
		</div>	
	</div>
	<div class='col-md-6 col-md-offset-3'>
		<%= link_to "Back to users", users_path, class: 'btn btn-success' %>
	</div>
</div>