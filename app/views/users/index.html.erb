<div class='row'>
	<div class='col-md-12'><h1>Users</h1></div>
	<div class='col-md-6 col-md-offset-3'>
		<div class='row'>
			<% @users.each do |user| %>
				<div class='col-md-2'>
					<%# if current_user && allowed(current_user, highlight.user_id) %>
						<%= link_to "View", user_path(user), class: 'btn btn-primary' %>
					<%#end %>
				</div>
				<div class='col-md-4'>
					<h5>Name: <span><%= user.name %><span></h5> 
				</div>
				<div class='col-md-6'>
					<h5>Email: <span><%= user.email %></span></h5>
				</div>
			<% end %>
		</div>
			
	</div>
</div>